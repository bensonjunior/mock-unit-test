{
  "name": "unit",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rimraf build && tsc",
    "test": "npm run test:mocha && npm run test:jest",
    "test:jest": "rimraf build && tsc && jest -c jest.unit.config.js",
    "test:mocha": "rimraf build && tsc && mocha build/test/unit/mocha/*.js",
    "test:e2e": "rimraf build && tsc && jest -c jest.e2e.config.js --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "NodeJS",
    "TypeScript",
    "Express",
    "TypeORM",
    "Jest",
    "Mocha",
    "Sinon",
    "unit",
    "tests",
    "unit testing"
  ],
  "author": "YegorZaremba <egorzaremba@gmail.com>",
  "dependencies": {
    "express": "4.17.1",
    "pg": "7.11.0",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.18"
  },
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/request-promise": "4.1.44",
    "@types/sinon": "7.0.13",
    "coveralls": "3.0.4",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "mocha": "6.1.4",
    "request": "^2.88.0",
    "request-promise": "4.2.4",
    "rimraf": "2.6.3",
    "sinon": "7.3.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "post-push": "git run test"
    }
  }
}
